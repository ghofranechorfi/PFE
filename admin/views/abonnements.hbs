<div>
    <div class="md:flex">
        <div>{{> sidebar}}</div>
        <div class="md:w-full ">
            {{> header}}
            <div class="flex mt-2">
                <h1 class="text-xl font-semibold p-6 pl-14 pr-96 italic">Liste des abonnements</h1>
            </div>  
            <form action="/ichhar-admin/clients/delete/{{this.id}}" method="get">
                <table class="w-96 md:w-10/12 ml-14 items-center bg-transparent border-collapse" >
                        <thead>
                            <tr style="background-color: #FFEFD5;">
                                <th class="px-2 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    ID
                                </th>
                                
                                <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    CIN
                                </th>

                                <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Nom complet
                                </th>

                                <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Montant
                                </th>

                                <th class="px-5 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Nombre de la carte
                                </th>

                                <th class="px-5 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Code
                                </th>

                                <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Dur√©e
                                </th>

                                <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-white border-blue-700">
                                    Annonce id
                                </th>
                            </tr>
                        </thead>

                        {{#each abonnementInfo}}
                        <tbody {{#ifeq ../selected_id this.id}} class="bg-red-200" {{/ifeq}}>
                            <tr>
                                <th class="border-t-0 px-2 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4 text-left flex items-center">
                                    {{id}}
                                </th>
                                    <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{cin}}
                                    </td>

                                    <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{nomprenom}}
                                    </td>

                                    <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{montant}} DT
                                    </td>
                                            
                                    <td class="border-t-0 px-5 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{nbrcarte}}
                                    </td>

                                    <td class="border-t-0 px-5 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{code}}
                                    </td>
                                            
                                    <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        {{duree}} jours
                                    </td>
                                            
                                    <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                                        <button class="ml-5 text-white title-font font-semibold w-10 h-10 bg-green-500 hover:bg-green-900 rounded-md shadow-xl">
                                            <a href="/ichhar-admin/annoncesattentes/annonce/{{annonce_id}}">
                                                {{annonce_id}}
                                            </a>
                                        </button>
                                    </td>
                            </tr>            
                        </tbody>
                        {{/each}}
                        
                </table>
            </form>
        </div>
    </div> 
</div>


