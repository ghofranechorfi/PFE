<div class="flex-wrap space-x-72">

{{> sidebar}}

<div>
    <div>
        {{> header}}

            <div class="flex space-x-96">
                <h1 class="text-xl font-semibold pt-6 pb-6 pr-32">Liste des catégories</h1>

                <button class="mt-4 relative group overflow-hidden px-4 h-10 rounded-full flex space-x-2 items-center
                    bg-gradient-to-r from-blue-400 to-blue-600 hover:to-blue-200">
                    <span class="relative text-sm text-white">Ajouter une catégorie</span>
                    <div class="flex items-center -space-x-3 translate-x-3 text-white">
                        <div class="w-2.5 h-[1.6px] rounded bg-white origin-left scale-x-0 transition duration-300 group-hover:scale-x-100"></div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                    </div>
                </button>
            </div>
            
            <table class="items-center bg-transparent border-collapse" style="width: 900px;">
                <thead>
                    <tr>
                        <th class="px-2 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-blue-300 border-blue-700">
                            ID
                        </th>
   
                        <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-blue-300 border-blue-700">
                            NOM
                        </th>

                        <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-blue-300 border-blue-700">
                            description
                        </th>

                        <th class="px-3 align-middle border border-solid py-3 text-xs uppercase border-l-0 border-r-0 whitespace-nowrap font-semibold text-left bg-blue-800 text-blue-300 border-blue-700">
                            Action
                        </th>
                    </tr>
                </thead>

                {{#each catinfo}}
                <tbody>
                    <tr>
                        <th class="border-t-0 px-2 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4 text-left flex items-center">
                            {{id}}
                        </th>
                            
                        <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                            {{nom}}
                        </td>

                        <td class="border-t-0 px-3 align-middle border-l-0 border-r-0 text-md whitespace-nowrap p-4">
                            {{description}}
                        </td>
                        
                        <td class="flex gap-2 border-t-0 px-3 align-middle border-l-0 border-r-0 text-xs whitespace-nowrap p-4 text-right">
                            <button class="text-white px-4 h-8 rounded-full flex space-x-2 items-center
                            bg-gradient-to-r from-blue-400 to-blue-600 hover:to-blue-200"> Modifier </button>
                            <button class="text-white px-4 h-8 rounded-full flex space-x-2 items-center
                            bg-gradient-to-r from-blue-400 to-blue-600 hover:to-blue-200"> Supprimer </button>
                        </td>
                    </tr>            
                </tbody>
                {{/each}}
                
            </table>

    </div> 
</div>

</div>