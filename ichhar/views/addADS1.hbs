<div class="bg-gray-100">

    {{> header}}

    <p class="ml-16 pt-4 pb-2 md:ml-96 mt-3 font-semibold font-sans text-gray-700">Ajouter une annonce > niveau 2</p>
    
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const msg = urlParams.get('msg')
        if (msg == "oneinput") {
            document.write('<h2 class="text-red-600 font-semibold md:ml-96">Vous devez remplir au moin une case </h2>');
        }

    </script>

    <form action="/add-ads/step1/step2" method="post" class="pb-8 md:pb-4">

        <div class="pt-2 pb-4 w-3/4 mb-12 mt-2 mx-auto rounded-lg shadow-xl bg-white md:gap-4 md:pt-5 md:ml-96 md:pl-9 md:w-3/6" >

            <div class="ml-16 mt-3 md:ml-32">
                <div>
                    <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
                    <select id="type" name="type" class="mt-1 block w-80 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm 
                    focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm">
                        <option name="1" value="motos">Motos</option>
                        <option name="2" value="voitures" >Voitures</option>
                        <option name="3" value="camions">Camions</option>
                    </select>
                </div>
                <div class="mt-4">
                    <label for="marque1" class="block text-sm font-medium text-gray-700">Marque</label>
                    <input type="text" name="marque1" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="modele1" class="block text-sm font-medium text-gray-700">Mod√®le</label>
                    <input type="text" name="modele1" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="etat1" class="block text-sm font-medium text-gray-700">Etat</label>
                    <input type="text" name="etat1" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="couleur1" class="block text-sm font-medium text-gray-700">Couleur</label>
                    <input type="text" name="couleur1" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>
            </div>

            <div class="mt-10 ml-32 md:ml-60">    
                <button type="submit" class="h-9 w-32 p-1 border rounded-md text-white" style="background-color: #00b906;">
                    Suivant
                </button> 
            </div>

        </div>

    </form>
</div>
