<div class="bg-gray-100">

    {{> header}}

    <p class="ml-16 pt-4 pb-2 md:ml-96 mt-5 font-semibold font-sans text-gray-700">Ajouter une annonce > niveau 2</p>
    
    <script>
        const queryString = window.location.search;
        const urlParams = new URLSearchParams(queryString);
        const msg = urlParams.get('msg')
        if (msg == "fillfields") {
            document.write('<h2 class="text-red-600 font-bold">Please fill up all the fields</h2>');
        }

    </script>

    <form action="/add-ads/step1/step2" method="get" class="pb-8 md:pb-4">

        <div class="pt-2 pb-4 w-3/4 mb-12 mt-2 mx-auto rounded-lg shadow-xl bg-white md:gap-4 md:pt-5 md:ml-96 md:pl-9 md:w-3/6" >

            <div class="ml-16 mt-10 md:ml-32">
                <div>
                    <label for="nom" class="block text-sm font-medium text-gray-700">Nom</label>
                    <input type="text" name="nom" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="marque" class="block text-sm font-medium text-gray-700">Marque</label>
                    <input type="text" name="marque" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="modele" class="block text-sm font-medium text-gray-700">Mod√®le</label>
                    <input type="text" name="modele" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>

                <div class="mt-4">
                    <label for="couleur" class="block text-sm font-medium text-gray-700">Couleur</label>
                    <input type="text" name="couleur" class="py-1.5 px-3 border rounded-md mt-1 block w-60 md:w-80">
                </div>
            </div>

            <div class="mt-10 ml-32 md:ml-60">    
                <button class="h-9 w-32 p-1 border rounded-md text-white" style="background-color: #00b906;">
                    <a href="/add-ads/step1/step2/payement" class="font-semibold text-sm">
                    Suivant
                    </a>
                </button> 
            </div>

        </div>

    </form>
</div>
