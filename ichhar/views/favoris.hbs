{{> header}}

<h1 class="ml-80 mt-6 mb-4 text-gray-900 font-semibold
text-xl">Vos annonces favoris</h1>

<div class="mx-auto border rounded-lg shadow-xl
            text-gray-900 h-full w-3/5" >
    
    <div class="pl-6 mt-2 mb-2 gap-8 flex font-semibold">
        <div class="w-10">id</div>
        <div class="w-10">titre</div>
        <div class="w-10">image</div>
        <div class="w-52">description</div>
        <div class="w-20">prix</div>
    </div>

    <hr class="mt-2 mb-2">
    
    {{#each userData}}
    <div class="pl-6 mb-6">
        <div class="flex gap-8">
        <div class="w-10">{{this.id}}</div>
        <div class="w-10">{{this.titre}}</div>
        <div class="w-10"><img src="{{this.photo_url1}}" alt=""></div>
        <div class="w-52">{{this.description}}</div>
        <div class="w-20">{{this.prix}}</div>
        <div>
            <form action="/favoris/delete/{{id}}" method="get">
            <button class="bg-gray-50 hover:bg-gray-300 text-black font-semibold p-2 
            border rounded-lg">Supprimer
            </button>
            </form>
        </div>
        </div>
    </div>
    {{/each}}
</div>

