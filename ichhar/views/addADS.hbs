{{> header}}

<p class="ml-72 mt-7 font-semibold">Ajouter une annonce</p>

<form action="POST">

    <div class="grid grid-cols-2 gap-4 bg-gray-50 mt-2 pt-5 ml-72 pl-9 rounded-lg" style="width: 760px; height:520px">

        <div>
            <div>
                <label for="titre" class="block text-sm font-medium text-gray-700">Titre</label>
                <input type="text" name="titre" class="py-1.5 px-3 border rounded-md mt-1 block w-80">
            </div>

            <div class="mt-2">
                <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
                <textarea id="description" name="description" rows="6"
                class="py-1.5 px-3 border rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-1 block w-80 sm:text-sm"
                placeholder="Une description concernant l'item à vendre/louer ou échanger"></textarea>
            </div>

            <div class="mt-2">
                <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
                <select id="type" name="type" autocomplete="country"
                class="mt-1 block w-80 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option>Vente</option>
                <option>Location</option>
                <option>Echange</option>
                </select>
            </div>

            <div class="mt-2">
                <label for="prix" class="block text-sm font-medium text-gray-700">Prix</label>
                <input type="text" name="prix" class="py-1.5 px-3 border rounded-md mt-1 block w-80">
            </div>

            <div class="mt-2">
                <label for="telephone" class="block text-sm font-medium text-gray-700">Télephone</label>
                <input type="text" name="telephone" class="py-1.5 px-3 border rounded-md mt-1 block w-80">
            </div>

        </div>

        <div>
            <div>
                <label for="categorie" class="block text-sm font-medium text-gray-700">Catégorie</label>
                <select id="categorie" name="categorie" autocomplete="country"
                class="mt-1 block w-80 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option>Véhicule</option>
                <option>Immobilier</option>
                <option>Emploi</option>
                <option>Maison et jardin</option>
                <option>Habillement</option>
                <option>Electronique</option>
                <option>Loisir</option>
                <option>Autre</option>
                </select>
            </div>

            <div class="mt-2">
                <label for="sous_categorie" class="block text-sm font-medium text-gray-700">Sous-catégorie</label>
                <select id="sous_categorie" name="sous_categorie" autocomplete="sous_categorie"
                class="mt-1 block w-80 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option>Véhicule</option>
                <option>Immobilier</option>
                <option>Loisir</option>
                </select>
            </div>

            <div class="mt-2">
                <label for="ville" class="block text-sm font-medium text-gray-700">Ville</label>
                <select id="ville" name="ville" autocomplete="ville"
                class="mt-1 block w-80 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                <option>Ariana</option>
                <option>Béja</option>
                <option>Ben Arous</option>
                <option>Bizerte</option>
                <option>Gabès</option>
                <option>Gafsa</option>
                <option>Jendouba</option>
                <option>Kairouan</option>
                <option>Kasserine</option>
                <option>kébili</option>
                <option>Kef</option>
                <option>Mahdia</option>
                <option>Manouba</option>
                <option>Médenine</option>
                <option>Monastir</option>
                <option>Nabeul</option>
                <option>Sfax</option>
                <option>Sidi bouzid</option>
                <option>Siliana</option>
                <option>Sousse</option>
                <option>Tataouine</option>
                <option>Tozeur</option>
                <option>Tunis</option>
                <option>Zaghouan</option>
                </select>
            </div>

            <div class="mt-2">
                <label for="codepostal" class="block text-sm font-medium text-gray-700">Code postal</label>
                <input type="text" name="codepostal" class="py-1.5 px-3 border rounded-md mt-1 block w-80">
            </div>

            <div class="mt-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Télecharger une photo</label>
                <div class='flex items-center justify-center w-80'>
                    <label class='flex flex-col border-4 border-dashed w-full h-32 hover:bg-gray-100 hover:border-gray-700 group'>
                    <div class='flex flex-col items-center justify-center pt-7'>
                        <svg class="w-10 h-10 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                            </path>
                        </svg>
                        <p class='lowercase text-sm text-gray-400 group-hover:text-gray-600 pt-1 tracking-wider'> Select a photo</p>
                    </div>
                    <input type='file' class="hidden" />
                    </label>
                </div>
            </div>
        </div>
        
        <div class="ml-60">    
            <button type="submit" 
            class="h-8 w-56 text-white font-semibold text-lg border border-white rounded-md 
            bg-gray-900 hover:bg-gray-700">Ajouter</button>
        </div>

    </div>

</form>

