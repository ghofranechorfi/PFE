<div>
{{> header}}
    <div class="flex justify-center mt-1/2" style="height:593px">
        <div class="xl:w-3/4 lg:w-11/12 flex">
            <div class="hidden lg:block lg:w-96 bg-cover mt-1" style="height:1000px; background-color: #f2f2f2;">
                {{> sidebarprofile}}
            </div>

            <div class="w-full lg:w-11/12 p-5 lg:rounded-l-none" >
                <form action="/profile/{{updateannonce.0.nom_utilisateur}}/annonces/update/{{updateannonce.0.id}}" 
                    method="post" enctype="multipart/form-data" class="pb-10">
                    <p class="ml-4 md:ml-4 mt-6 font-semibold font-sans text-gray-700">Modifier votre annonce</p>
                    <div class=" border border-gray-200 w-96 mx-auto md:mb-10 md:grid md:grid-cols-2 md:gap-4 md:w-11/12 md:h-3/6 bg-white mt-2 pt-5 md:ml-4 pl-9 shadow-lg rounded-lg">
                        <div class="mt-3">
                            <div>
                                <label for="titre1" class="block text-sm font-medium text-gray-700">Titre</label>
                                <input type="text" name="titre1" class="py-1.5 px-3 border rounded-md mt-1 block w-64"
                                value="{{updateannonce.0.titre}}">
                            </div>

                            <div class="mt-2">
                                <label for="description1" class="block text-sm font-medium text-gray-700">Description</label>
                                <textarea id="description1" name="description1" rows="6"
                                class="py-1.5 px-3 border rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-1 block w-64 sm:text-sm"
                                placeholder="Une description concernant l'item à vendre/louer ou échanger">
                                {{updateannonce.0.description}}
                                </textarea>
                            </div>

                            
                        </div>

                        <div class="mt-3">
                            <div>
                                <label for="telephone1" class="block text-sm font-medium text-gray-700">Téléphone</label>
                                <input type="tel" name="telephone1" class="py-1.5 px-3 border rounded-md mt-1 block w-64"
                                value={{updateannonce.0.telephone}}>
                            </div>

                            <div class="mt-2">
                                <label for="prix1" class="block text-sm font-medium text-gray-700">Prix</label>
                                <input type="text" name="prix1" class="py-1.5 px-3 border rounded-md mt-1 block w-64"
                                value={{updateannonce.0.prix}}>
                            </div>

                            <div class="mt-2">
                                <label for="categorie1" class="block text-sm font-medium text-gray-700">Catégorie</label>
                                <select id="categorie1" name="categorie1"
                                class="mt-1 block w-64 py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm 
                                focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm">
                                    <option name="1" value="1">Véhicule</option>
                                    <option name="2" value="2">Immobilier</option>
                                    <option name="3" value="3">Habillement</option>
                                    <option name="5" value="5">Electronique</option>
                                </select>
                            </div>

                        </div>

                        <div class="ml-24 pb-4 mt-6 md:ml-56">    
                            <button type="submit" class="h-9 w-32 p-1 border rounded-md hover:bg-white text-white" style="background-color: #00b906;">
                                Modifier 
                            </button> 
                        </div>

                    </div>  
                </form>
            </div>
        </div>
    </div>  
</div>













