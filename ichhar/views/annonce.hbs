{{> header}}

   <form method="get" action="/annonce">
   {{#each annonceinfo}}
        <div class="container mx-auto px-6">
            <div class="md:flex md:items-center">
                <div class="w-full h-64 md:bg-auto md:mt-10 md:w-1/2 lg:h-96">
                    <img class="h-96 w-full border mt-4 rounded-md max-w-lg mx-auto" src="{{this.photo_url1}}" alt="image de l'annonce">
                </div>

                <div class="w-full h-full ml-5 mt-44 md:ml-2 md:mt-14 md:w-1/2">
                    <div>
                        <label class="text-gray-700"> 
                            <span class="text-black text-md font-bold">Titre </span>  
                            {{this.titre}}
                        </label>
                    </div>
                    <div class="mt-3">
                        <label class="text-gray-700"> 
                            <span class="text-black text-md font-bold">Description </span> 
                            {{this.description}} 
                        </label>
                    </div>
                    <div class="mt-2 mb-4">
                        <label class="text-gray-700"> 
                            <span class="text-black text-md font-bold">Prix </span> 
                            {{this.prix}} DT
                        </label>
                    </div>
                    <div class="">
                        <p class="text-gray-700 text-lg font-semibold pb-2"> L'auteur: </p> 
                        <a href="/profile/{{this.nom_utilisateur}}" class="flex">
                            <img src="{{this.photo_url}}" class="rounded-full shadow-xl h-9 w-9" alt="">
                            <p class="text-sm ml-2 mt-2 font-semibold"> {{nom}} {{prenom}} </p> 
                        </a>
                    </div>
                    <div class="mt-1">
                        <label class="text-gray-700"> 
                            <span class="text-black text-sm font-semibold">loacalisation </span> 
                            {{this.ville}} 
                        </label>
                    </div>
                    <div class="mt-1">
                        <label class="text-gray-700"> 
                            <span class="text-black text-sm font-semibold">Numéro de Téléphone </span> 
                            {{this.telephone}} 
                        </label>
                    </div>

                    <div>

                    </div>
                    
                    <div class="flex items-center mt-6 space-x-4">
                        <button style="background-color: #636363;" class="block text-white text-sm font-medium rounded-lg focus:outline-none px-5 py-2.5 text-center">
                            <a href="/items-favoris"> Ajouter au favoris </a>
                        </button>  
                        <!-- Modal toggle -->
                        <button style="background-color: #00b906;" class="block text-white text-sm font-medium rounded-lg focus:outline-none px-5 py-2.5 text-center" type="button" data-modal-toggle="defaultModal">
                            Signaler l'annonce
                        </button>
                        <!-- Main modal -->
                        <div id="defaultModal" tabindex="-1" aria-hidden="true" style="width: 750px; margin:auto; margin-top: 70px"
                            class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 md:inset-0 h-modal md:h-full">
                            <div class="relative p-4 w-full max-w-2md h-full md:h-auto">
                                <!-- Modal content -->
                                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                                    <!-- Modal header -->
                                    <div class="flex justify-between items-start p-4 rounded-t border-b dark:border-gray-600">
                                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                                            Quel est le problème avec cette annonce?
                                        </h3>
                                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="defaultModal">
                                            <svg class="w-5 h-5 mr-10" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
                                        </button>
                                    </div>
                                    <!-- Modal body -->
                                    <div class="ml-28 p-6 space-y-6">
                                        <div>
                                            <label for="dropdownDefault" class="text-base leading-relaxed text-gray-500 dark:text-gray-400">type d'abus</label><br>
                                            <button id="dropdownDefault" data-dropdown-toggle="abus" 
                                                class="w-96 shadow-lg text-black bg-white mt-1 border border-gray-300 focus:outline-none font-medium rounded-lg text-sm 
                                                px-4 py-2 text-center inline-flex items-center mb-4" type="button"> Type d'abus 
                                                <svg class="w-4 h-4 ml-64" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                                </svg>
                                            </button>
                                            <!-- Dropdown menu -->
                                            <div id="abus" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-96 border-1">
                                                <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefault">
                                                    <li>
                                                        <a href="" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Fraude</a>
                                                    </li>
                                                    <li>
                                                        <a href="" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Mauvaise catégorie</a>
                                                    </li>
                                                    <li>
                                                        <a href="" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Nudité</a>
                                                    </li>
                                                    <li>
                                                        <a href="" class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">Article déjà vendu</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div>
                                            <label for="description" class="text-base leading-relaxed text-gray-500 dark:text-gray-400">Message</label>
                                            <textarea id="description" name="description" rows="6"
                                            class="w-96 py-1.5 px-3 border rounded-md border-gray-300 shadow-sm focus:ring-gray-500 focus:border-gray-500 mt-1 block w-80 sm:text-sm"
                                            placeholder="Explique plus le cas"></textarea>
                                        </div>
                                    </div>


                                    <!-- Modal footer -->
                                    <div class="shadow-lg items-center text-center p-6 rounded-b border-t border-gray-200 dark:border-gray-600">
                                        <button data-modal-toggle="defaultModal" type="button" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800">Confirmer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="mt-12 mb-10">
               <h3 class="text-gray-700 text-xl font-medium">Des autres annonces</h3>
                <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1563170351-be82bc888aa4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=376&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Chanel</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1544441893-675973e31985?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Man Mix</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1532667449560-72a95c8d381b?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80')">

                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Classic watch</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1590664863685-a99ef05e9f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=345&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">woman mix</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    {{/each}}
    </form>




