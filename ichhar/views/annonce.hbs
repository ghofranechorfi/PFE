{{> header}}

   <form method="get" action="/annonce">
   {{#each annonceinfo}}
        <div class="container mx-auto px-6">
            <div class="md:flex md:items-center">
                <div class="w-full h-64 md:bg-auto md:mt-10 md:w-1/2 lg:h-96">
                    <img class="h-96 w-full border mt-4 rounded-md max-w-lg mx-auto" src="/images/{{this.photo_url1}}" alt="image de l'annonce">
                </div>

                <div class="w-full h-full ml-5 mt-44 md:ml-2 md:mt-1 md:w-1/2">
                    <h2 class="text-md title-font text-gray-500 tracking-widest mt-16" style="cursor: auto;">+ Informations de l'annonce </h2>
                    <div>
                        <span class="text-black title-font text-md font-normal">Titre: </span> 
                        <label class="text-black title-font text-2xl"> 
                            {{this.titre}}
                        </label>
                    </div>
                    <div class="mt-3">
                        <span class="text-black title-font text-md font-normal">Description: </span> 
                        <label class="text-black title-font text-lg">  
                            {{this.description}} 
                        </label>
                    </div>
                    <div class="mt-2 mb-4">
                        <span class="text-black title-font text-md font-normal">Prix: </span> 
                        <label class="text-black title-font text-lg">        
                            {{this.prix}} DT
                        </label>
                    </div>

                    <h2 class="text-md title-font text-gray-500 tracking-widest mt-4" style="cursor: auto;">+ Profil de l'annonceur </h2>
                    <div class="mt-2">
                        <a href="/profile/{{this.nom_utilisateur}}" class="flex">
                            <img src="/images/{{this.photo_url}}" class="rounded-full shadow-xl h-9 w-9" alt="">
                            <p class="text-sm ml-2 mt-2 font-semibold"> {{nom}} {{prenom}} </p> 
                        </a>
                    </div>
                    <div class="mt-1">
                        <span class="text-black title-font text-md font-normal">loacalisation: </span> 
                        <label class="text-black title-font text-lg font-semibold">     
                            {{this.ville}} 
                        </label>
                    </div>
                    <div class="mt-1">
                        <span class="text-black title-font text-md font-normal">Numéro de Téléphone: </span>
                        <label class="text-black title-font text-lg font-semibold">  
                            {{this.telephone}} 
                        </label>
                    </div>
                    
                    <div class="flex items-center mt-6 space-x-4">
                        <button type="submit" style="background-color:#00b906" 
                            class="block text-white text-sm font-medium rounded-full focus:outline-none px-5 py-2.5 
                            text-center">
                            <a href="/favoris/add/{{this.id}}"> Ajouter au favoris </a>
                        </button>  
                    </div>
                </div>

            </div>

            <div class="mt-12 mb-10">
               <h3 class="text-gray-700 text-xl font-medium">Des autres annonces</h3>
                <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mt-6">
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1563170351-be82bc888aa4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=376&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Chanel</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1544441893-675973e31985?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Man Mix</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1532667449560-72a95c8d381b?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80')">

                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">Classic watch</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                    <div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden">
                        <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url('https://images.unsplash.com/photo-1590664863685-a99ef05e9f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=345&q=80')">
                           
                        </div>
                        <div class="px-5 py-3">
                            <h3 class="text-gray-700 uppercase">woman mix</h3>
                            <span class="text-gray-500 mt-2">$12</span>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    {{/each}}
    </form>




