{{> header}}
   <form method="get" action="/annonce" class="my-8">
   {{#each annonceinfo}}
        <div class="container mx-auto px-6">
            <div class="md:flex md:items-center">
                <div class="w-full h-64 md:w-1/2 lg:h-96">
                    <img class="h-full w-full rounded-md object-cover max-w-lg mx-auto" src="{{this.photo_url}}" alt="Nike Air">
                </div>
                <div class="w-full max-w-lg mx-auto mt-5 md:ml-8 md:mt-0 md:w-1/2">
                    <div class="mt-2">
                        <label class="text-gray-700 text-lg" for="count"> 
                            <span class="text-black text-xl text-semibold">Titre :</span>  
                            {{this.titre}}
                        </label>
                    </div>
                    <div class="mt-3">
                        <label class="text-gray-700 text-lg" for="count"> 
                            <span class="text-black text-xl text-semibold">Description :</span> 
                            {{this.description}} 
                        </label>
                    </div>
                    <div class="mt-2">
                        <label class="text-gray-700 text-lg" for="count"> 
                            <span class="text-black text-xl text-semibold">Prix :</span> 
                            {{this.prix}} 
                        </label>
                    </div>
                    <div class="mt-3">
                        <label class="text-gray-700 text-lg" for="count"> 
                            <span class="text-black text-xl text-semibold">loacalisation :</span> 
                            {{this.ville}} 
