<div class="h-18 flex flex-row justify-between pb-1 bg-white shadow-md">
    
    <div class="pl-6">
        <a href="/">
            <img src="/images/ICHHAR-bgT.png" class="w-44 h-16" alt="">
        </a>
    </div>

    <div class="pt-4 justify-center">
        <!--barre de recherche-->
        <div class="mb-3 xl:w-96">
            <div class="input-group relative flex items-stretch w-full mb-4">
                <input type="search" class="form-control relative flex-auto min-w-0 block w-full px-3 py-1.5 shadow-sm 
                text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 
                rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-gray-200 
                focus:outline-none" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                <button class="btn px-6 py-2.5 bg-blue-900 text-white font-medium text-xs uppercase rounded shadow-sm 
                flex items-center" type="button" id="search-btn">
                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" class="w-4" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <div class="flex pr-3 pt-4 gap-2">
        <!--icon favoris-->
        <div class="p-1 h-8 w-8 text-gray-900 bg-gray-50 hover:text-white rounded-full shadow-lg hover:bg-blue-900">
            <a href="/favoris">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-6 pt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
            </a>
        </div>

        <!--button d'ajout d'une annonce-->
        <div class="mt-0.75">
            <button class="h-9 w-44 p-1 shadown-md  rounded-md bg-gray-50 hover:bg-blue-900 text-black hover:text-white"> 
                <a href="/add-ads/step1" class="font-semibold text-sm flex"> 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>    
                Ajouter une annonce
                </a>
            </button>
        </div>

        <!--icon user "connexion"
        <div>
            <button class="h-9 w-32 justify-center border rounded-md bg-gray-600 hover:bg-gray-700"> 
                <a href="signup" class="flex font-semibold text-white px-4 gap-1"> 
                    <svg xmlns="http://www.w3.org/2000/svg" class="mt-0.5 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                s'inscrire 
                </a>
            </button>
        </div> -->
        <div class="flex">  
            {{#if loggedin}}
                <a href="/profile/{{session.userinfo.nom}}">
                    <img class="h-9 w-9 rounded-full bg-black" src="{{session.userinfo.photo_url}}">
                </a>
            {{else}}
                <button class="h-9 w-32 p-1 border rounded-md bg-blue-900 hover:bg-white text-white hover:text-black">
                    <a href="/signin" class="font-semibold text-sm flex  gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    Se connecter
                    </a>
                </button> 
            {{/if}}  
        </div>

    </div>

</div>



















