<h3 class="pt-4 text-2xl text-center">Mes informations</h3>
<form
  action="/profile/:nom/reglages"
  method="POST"
  class="px-8 pt-6 pb-8 mb-4 bg-white rounded"
>
  <div class="mt-4 grid grid-cols-2 gap-8">
    <div>
      <label class="block mb-2 text-sm font-bold text-gray-700" for="nom">
        Nom
      </label>
      <input
        class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
        id="nom"
        name="nom"
        type="text"
        value="{{this.nom}}"
      />
    </div>

    <div>
      <label class="block mb-2 text-sm font-bold text-gray-700" for="prenom">
        Prénom
      </label>
      <input
        class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
        id="prenom"
        name="prenom"
        type="text"
        value="{{this.prenom}}"
      />
    </div>
  </div>

  <div class="mb-1">
    <label
      class="block mb-2 text-sm font-bold text-gray-700"
      for="cin"
    >CIN</label>
    <input
      class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
      id="cin"
      type="text"
      value="{{this.cin}}"
    />
  </div>

  <div class="mb-1">
    <label class="block mb-2 text-sm font-bold text-gray-700" for="phone">Numéro
      de télephone</label>
    <input
      name="telephone"
      class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
      id="telephone"
      type="text"
      value="+216 {{this.telephone}}"
    />
  </div>

  <div class="mb-1">
    <label
      class="block mb-2 text-sm font-bold text-gray-700"
      for="email"
    >Email</label>
    <input
      name="email"
      id="email"
      type="email"
      class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
      value="{{this.email}}"
    />
  </div>

  <div class="mb-4 md:flex md:justify-between">
    <div class="mb-4 md:mr-2 md:mb-0">
      <label
        class="block mb-2 text-sm font-bold text-gray-700"
        for="password"
      >Password</label>
      <input
        name="password"
        id="password"
        type="password"
        class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
        value="{{this.password}}"
      />
    </div>

    <div class="md:ml-2">
      <label
        class="block mb-2 text-sm font-bold text-gray-700"
        for="c_password"
      >Confirm Password</label>
      <input
        name="c-password"
        id="c_password"
        type="password"
        class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
        value="{{this.password}}"
      />
    </div>
  </div>

  <button
    type="submit"
    class="block mx-auto w-72 px-4 py-2 mt-1 text-sm font-medium text-center text-white bg-gray-600 border border-transparent rounded-lg active:bg-gray-600 hover:bg-gray-600 focus:outline-none focus:shadow-outline-gray"
  >
    Mettre à jour mes informations
  </button>

</form>