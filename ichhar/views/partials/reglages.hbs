<h3 class="pt-2 text-2xl text-center">Mes informations</h3>
<script>
      const queryString = window.location.search;
      const urlParams = new URLSearchParams(queryString);
      const msg = urlParams.get('msg')
      if (msg == "passwordsfail") {
        document.write('<h2 class="mt-4 ml-7 text-red-600 font-bold text-xs">Les mots de passes ne se correspond pas</h2>');
      }
      if (msg == "done") {
        document.write('<h2 class="mt-4 ml-7 text-green-600 font-bold text-xs">Mise à jour effectuée </h2>');  
      }
</script>
<form action="/profile/{{userInfo.nom_utilisateur}}/reglages" method="post" 
  class="px-8 mb-2 bg-white rounded">

  <div class="mt-2 grid grid-cols-2 gap-8">

    <div>
      <label class="block mb-2 text-sm font-bold text-gray-700" for="nom">Nom</label>
      <input id="nom" name="nom" type="text" value="{{userInfo.nom}}" class="w-full px-3 py-2 mb-3 text-sm leading-tight 
      text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
    </div>

    <div>
      <label class="block mb-2 text-sm font-bold text-gray-700" for="prenom">Prénom</label>
      <input id="prenom" name="prenom" type="text" value="{{userInfo.prenom}}" class="w-full px-3 py-2 mb-3 text-sm 
      leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
    </div>

  </div>
<div class="mt-1 grid grid-cols-2 gap-8">
  <div>
    <label class="block mb-2 text-sm font-bold text-gray-700" for="cin">CIN</label>
    <input id="cin" name="cin" type="text" value="{{userInfo.cin}}" class="w-full px-3 py-2 mb-3 text-sm leading-tight 
    text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
  </div>

  <div>
    <label class="block mb-2 text-sm font-bold text-gray-700" for="nom_utilisateur">Nom d'utilisateur</label>
    <input id="nom_utilisateur" name="nom_utilisateur" type="text" value="{{userInfo.nom_utilisateur}}" class="w-full px-3 py-2 mb-3 text-sm leading-tight 
    text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
  </div>
</div>

  <div class="mb-1">
    <label class="block mb-2 text-sm font-bold text-gray-700" for="telephone">Numéro de télephone</label>
    <input name="telephone" id="telephone" type="text" placeholder="+216 ** *** ***" value="{{userInfo.telephone}}" class="w-full px-3 py-2 mb-3 text-sm 
      leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
  </div>

  <div class="mb-1">
    <label class="block mb-2 text-sm font-bold text-gray-700" for="email">Email</label>
    <input name="email" id="email" type="email" value="{{userInfo.email}}" class="w-full px-3 py-2 mb-3 text-sm leading-tight 
    text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
  </div>

  <div class="mb-4 md:flex md:justify-between">

    <div class="mb-4 md:mr-2 md:mb-0">
      <label class="block mb-2 text-sm font-bold text-gray-700" for="password">Mot de passe</label>
      <input name="password" id="password" type="password" value="{{userInfo.password}}" class="w-full px-3 py-2 mb-3 text-sm 
      leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
    </div>

    <div class="md:ml-2">
      <label class="block mb-2 text-sm font-bold text-gray-700" for="c_password">Confirmer mot de passe</label>
      <input name="c_password" id="c_password" type="password" value="{{userInfo.password}}" class="w-full px-3 py-2 
      text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
    </div>

  </div>

    <button type="submit" style="background-color: #00b906;" class="block mx-auto w-72 px-4 py-2 mb-2 text-sm 
  font-medium text-center text-white border border-transparent rounded-lg focus:outline-none 
  focus:shadow-outline-gray"> Mettre à jour mes informations </button>
</form>


  <a href="/profile/delete/{{userInfo.nom_utilisateur}}" class="text-red-600 font-semibold text-md">Supprimer mon compte</a>

