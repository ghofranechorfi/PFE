<div class="bg-gray-100">

{{> header}}

<p class="ml-16 pt-5 md:ml-96 mt-5 font-semibold font-sans text-gray-700">Ajouter une annonce > niveau 2 </p>
<script>
    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const msg = urlParams.get('msg')
    if (msg == "fillfields") {
        document.write('<h2 class="text-red-600 font-bold">Please fill up all the fields</h2>');
    }

</script>

    <form action="/add-ads/step1/step2" method="get" class="pb-20 md:pb-20">

