<div class="bg-gray-100">
  {{>header}}

<form method="post" action="/add-ads/step1/step2/payement"  class="flex justify-center items-center pt-14 pb-20">
  <div class="bg-white p-3 rounded-lg shadow-xl" style="width: 600px; height:480px">
    <p class="text-xl font-semibold pt-6 pb-6 text-center">Détails de payement </p>
    <div class="input_text mt-6 relative ml-24">
      <input
        type="text"
        class="h-12 pl-7 outline-none px-2 focus:border-blue-900 transition-all w-96 border-b"
        placeholder="nom et prérom"
      />
      <span class="absolute left-0 text-sm -top-4">Nom et Prénom</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-2 top-3 text-gray-400 h-6 w-6 pr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
      </svg>
    </div>

    <div class="input_text mt-6 relative ml-24">
      <input
        type="text"
        class="h-12 pl-7 outline-none px-2 focus:border-blue-900 transition-all w-96 border-b"
        placeholder="20 DT"
      />
      <span class="absolute left-0 text-sm -top-4">Montant </span>
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-2 top-3 text-gray-400 h-6 w-6 pr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>

    <div class="input_text mt-8 relative ml-24">
      <input
        type="text"
        class="h-12 pl-7 outline-none px-2 focus:border-blue-900 transition-all w-96 border-b"
        placeholder="0000 0000 0000 0000"
        data-slots="0"
        data-accept="\d"
        size="19"
      />
      <span class="absolute left-0 text-sm -top-4">Nombre de la carte</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-2 top-3 text-gray-400 text-sm h-6 w-6 pr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
      </svg>

    </div>

    <div class="input_text mt-8 relative ml-24">
      <input
        type="password"
        class="h-12 pl-7 outline-none px-2 focus:border-blue-900 transition-all w-96 border-b"
        placeholder="****"
        data-slots="0"
        data-accept="\d"
        size="19"
      />
      <span class="absolute left-0 text-sm -top-4">Code</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-2 top-3 text-gray-400 pr-2 h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
      </svg>

    </div>

    <div class="flex justify-center mt-7">
      <button class="h-9 w-32 p-1 border rounded-md bg-blue-900 hover:bg-white text-white" style="background-color: #00b906;">
        <a href="/add-ads/step1/step2/payement" class="font-semibold text-sm">
          Payer
        </a>
      </button> 
    </div>

  </div>
</form>

</div>



